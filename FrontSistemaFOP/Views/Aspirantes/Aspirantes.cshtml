@model IEnumerable<FrontSistemaFOP.Models.AspiranteViewModel>

@{
    ViewBag.Title = "Aspirantes";
}

<html>

<head>


</head>

<body>


    <h2 style="text-align: center">Aspirantes</h2>

    <div class="row"><label>&nbsp; </label></div>

    <p>

        <button type="button" class="btn btn-success" id="NvoAspirante">
            <i class="glyphicon glyphicon-plus"></i> Agregar Aspirante
        </button>
    </p>
    <div class="row"><label>&nbsp; </label></div>

    <table class="table" id="TablaAspirantes">
        <thead>

            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.NumeroEmpleado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Estatus)
                </th>

                <th></th>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroEmpleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>

                    <td>
                        @Html.CheckBoxFor(modelItem => item.Estatus, new { @class = "claseestatus", data_toggle = "toggle", data_onstyle = "warning", data_on = "Activo", data_off = "Inactivo", dataid = @item.IdAspirante })
                        @*@Html.DisplayFor(modelItem => item.Estatus)*@
                    </td>

                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })*@

                        <button type="button" class="btn btn-info" id="@item.IdAspirante">
                            <i class="glyphicon glyphicon-refresh"></i> Actualizar Datos
                        </button>

                    </td>
                </tr>
            }
        </tbody>


    </table>

    <div class="modal fade" tabindex="-1" role="dialog" id="NuevoAspirante" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Nuevo Aspirante</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="contenidoNuevoAspirante">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>



@section Scripts
{
    

    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script src="/scripts/ScriptAspirantes.js"></script>

}
